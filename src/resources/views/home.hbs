<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card">
                <a  href="/courses/{{this.slug}}"><img src="{{this.image}}" alt="" class="card-img-top"></a>
                
                <div class="card-body">

                    <a  style="text-decoration: none;" href="/courses/{{this.slug}}">
                    <h5 class="card-title">
                        {{this.name}}
                    </h5>
                    </a>
                    
                    <p class="card-text">
                        {{this.description}}
                    </p>
                    <a href="#" class="btn btn-primary">Buy Course</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>